<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/meu_negocio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="livrokotlin.com.farmaciaesperanca.view.savvyGerenciador.MeuNegocioActivity">

    <LinearLayout
            android:background="@color/color_blue_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blue_background"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp"
                tools:ignore="MissingConstraints">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.Toolbar
                            android:gravity="start"
                            android:id="@+id/toolbar_meu_negocio"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="20dp"
                            app:popupTheme="@style/AppTheme.PopupOverlay">
                    </androidx.appcompat.widget.Toolbar>

                </RelativeLayout>

                <RelativeLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/btn_notification"
                            android:gravity="end"
                            android:layout_margin="20dp"
                            android:src="@drawable/ic_notification"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>

                </RelativeLayout>

                <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:elevation="8dp"
                            android:layout_margin="15dp"
                            android:src="@drawable/ic_logosavvy"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150dp"
                            android:layout_height="100dp"/>

                </RelativeLayout>

                <RelativeLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.nex3z.notificationbadge.NotificationBadge
                            android:visibility="gone"
                            android:clickable="false"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="12dp"
                            android:id="@+id/badge_meu_negocio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:nbMaxTextLength="2" />

                </RelativeLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
                android:text="Bem-Vindo ao seu Negócio"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_adm_pedido"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="15dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_checklist_box"
                                android:layout_marginBottom="10dp"
                                android:layout_width="80dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="Pedidos"
                                android:layout_gravity="center_horizontal"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_adm_clientes"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="15dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_search_cliente"
                                android:layout_marginBottom="10dp"
                                android:layout_width="80dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="Clientes"
                                android:layout_gravity="center_horizontal"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_adm_chat"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="15dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_chat2"
                                android:layout_marginBottom="10dp"
                                android:layout_width="80dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="Chat"
                                android:layout_gravity="center_horizontal"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_adm_edito"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="15dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_code"
                                android:layout_marginBottom="10dp"
                                android:layout_width="80dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="Editor"
                                android:layout_gravity="center_horizontal"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_adm_config"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="15dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_settings"
                                android:layout_marginBottom="10dp"
                                android:layout_width="80dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="Configurações"
                                android:layout_gravity="center_horizontal"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_blue_background"
        tools:context="livrokotlin.com.farmaciaesperanca.view.savvyGerenciador.SliderEditActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_adm_pedido"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Slider 1"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:id="@+id/btn_slider1"
                        android:layout_margin="10dp"
                        android:layout_gravity="end"
                        android:rotation="180"
                        android:foreground="@drawable/ic_plus_blue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                <LinearLayout
                        android:id="@+id/slider1_visibility"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="320dp"
                            android:layout_height="200dp">

                            <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/slider1"
                                    android:src="@drawable/found_image"
                                    android:layout_margin="10dp"
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                            android:id="@+id/btn_add_slider1"
                            android:layout_margin="10dp"
                            android:text="Inserir Nova Imagem"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/btn_remove"
                            android:layout_width="250dp"
                            android:layout_height="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_adm_chat"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Slider 2"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:id="@+id/btn_slider2"
                        android:layout_margin="10dp"
                        android:layout_gravity="end"
                        android:rotation="180"
                        android:foreground="@drawable/ic_plus_blue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                <LinearLayout
                        android:id="@+id/slider2_visibility"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="320dp"
                            android:layout_height="200dp">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/slider2"
                                android:src="@drawable/found_image"
                                android:layout_margin="10dp"
                                android:layout_width="320dp"
                                android:layout_height="200dp"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                            android:id="@+id/btn_add_slider2"
                            android:layout_margin="10dp"
                            android:text="Inserir Nova Imagem"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/btn_remove"
                            android:layout_width="250dp"
                            android:layout_height="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_adm_edito"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Slider 3"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:id="@+id/btn_slider3"
                        android:layout_margin="10dp"
                        android:layout_gravity="end"
                        android:rotation="180"
                        android:foreground="@drawable/ic_plus_blue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                <LinearLayout
                        android:id="@+id/slider3_visibility"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="320dp"
                            android:layout_height="200dp">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/slider3"
                                android:src="@drawable/found_image"
                                android:layout_margin="10dp"
                                android:layout_width="320dp"
                                android:layout_height="200dp"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                            android:id="@+id/btn_add_slider3"
                            android:layout_margin="10dp"
                            android:text="Inserir Nova Imagem"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/btn_remove"
                            android:layout_width="250dp"
                            android:layout_height="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_adm_config"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Slider 4"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:id="@+id/btn_slider4"
                        android:layout_margin="10dp"
                        android:layout_gravity="end"
                        android:rotation="180"
                        android:foreground="@drawable/ic_plus_blue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                <LinearLayout
                        android:id="@+id/slider4_visibility"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="320dp"
                            android:layout_height="200dp">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/slider4"
                                android:src="@drawable/found_image"
                                android:layout_margin="10dp"
                                android:layout_width="320dp"
                                android:layout_height="200dp"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                            android:id="@+id/btn_add_slider4"
                            android:layout_margin="10dp"
                            android:text="Inserir Nova Imagem"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/btn_remove"
                            android:layout_width="250dp"
                            android:layout_height="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

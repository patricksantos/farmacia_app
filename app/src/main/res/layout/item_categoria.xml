<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_margin="15dp"
                    android:id="@+id/imagem_produto"
                    android:background="@drawable/ic_foto"
                    android:layout_width="80dp"
                    android:layout_height="80dp" android:contentDescription="IMAGE"/>

            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/txt_nomeProduto"
                        android:maxLines="1"
                        android:maxWidth="150dp"
                        android:text="Nome Produto"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/txt_qtdProduto"
                            android:layout_marginStart="5dp"
                            android:text="Qtd"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text=" Produtos Disponiveis"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="R$ "
                            android:textStyle="italic"
                            android:textColor="@color/RedColor"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/txt_preçoProduto"
                            android:text="Preço Produto"
                            android:textStyle="italic"
                            android:textColor="@color/RedColor"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageButton
                        android:layout_margin="10dp"
                        android:id="@+id/comprar_umClick"
                        android:src="@drawable/ic_shopping_cart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
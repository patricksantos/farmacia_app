<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detalhes_produto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundApp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".view.DetalhesProdutosActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:gravity="center"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="30dp">

                    <Button
                            android:id="@+id/btn_voltar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="8dp"
                            android:gravity="end"
                            android:background="@drawable/ic_back"/>

                </RelativeLayout>

                <TextView
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:text="Produto"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorLightGrey"/>

                <RelativeLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="30dp">

                    <Button
                            android:id="@+id/btn_compras2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="8dp"
                            android:gravity="end"
                            android:background="@drawable/ic_shop"/>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/imagem_produtoDetalhes"
                                android:background="@drawable/ic_foto"
                                android:layout_width="150dp"
                                android:layout_height="150dp"/>


                        <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/txt_nomeProdutoDetalhes"
                                android:text="Nome Produto"
                                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/txt_marcaProdutoDetalhes"
                                android:text="Marca"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/txt_qtdProdutoDetalhes"
                                    android:text="0"
                                    android:textStyle="italic"
                                    android:textSize="18sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:text=" itens disponiveis"
                                    android:textStyle="italic"
                                    android:textSize="18sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:text="R$ "
                                    android:textStyle="italic"
                                    android:textColor="@color/RedColor"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:id="@+id/txt_preçoProdutoDetalhes"
                                    android:text="Preço Produto"
                                    android:textStyle="italic"
                                    android:textColor="@color/RedColor"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                                android:showDividers="end"
                                android:divider="@color/backgroundApp"
                                android:padding="15dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <nl.dionsegijn.steppertouch.StepperTouch
                                    android:id="@+id/stepperTouch"
                                    app:stepperTextColor="@color/colorPrimary"
                                    app:stepperBackgroundColor="@color/colorPrimary"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                        android:elevation="@dimen/cardview_default_elevation"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/btn_addProdutoCesta"
                        android:background="@drawable/round_btn_red"
                        android:text="Adcionar à cesta"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" tools:targetApi="lollipop"/>

                <androidx.cardview.widget.CardView
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_weight="4"
                                    android:id="@+id/txt_descriçãoProdutoDetalhes"
                                    android:text="Descrição"
                                    android:textStyle="bold"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="18sp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                            <RelativeLayout
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                                        app:cardCornerRadius="12dp"
                                        android:id="@+id/btn_up_descricao"
                                        android:layout_gravity=""
                                        android:rotation="180"
                                        android:foreground="@drawable/ic_plus"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <View
                                android:id="@+id/divideDesc"
                                android:layout_width="match_parent"
                                android:visibility="gone"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@color/gray_btn_bg_pressed_color" />

                        <TextView
                                android:id="@+id/txt_descricao"
                                android:visibility="gone"
                                android:text="Descrição"
                                android:layout_marginTop="5dp"
                                android:textStyle="normal"
                                android:textSize="15sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
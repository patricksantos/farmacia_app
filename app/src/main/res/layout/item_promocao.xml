<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="170dp">

        <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/imagem_produto_promocao"
                    android:background="@drawable/ic_foto"
                    android:layout_width="80dp"
                    android:layout_height="80dp" android:contentDescription="IMAGE"/>

            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:gravity="center"
                        android:maxLines="1"
                        android:id="@+id/txt_nomeProduto_promocao"
                        android:text="Nome Produto"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="R$ "
                            android:textStyle="italic"
                            android:textColor="@color/RedColor"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/txt_preçoProduto_promocao"
                            android:text="Preço Produto"
                            android:textStyle="italic"
                            android:textColor="@color/RedColor"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundApp"
        tools:context="livrokotlin.com.farmaciaesperanca.view.conta.FormasPagamentoActivity">

    <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/pagamento_avista"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:background="@drawable/icon_money"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                    <TextView
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:text="Avista na Entrega"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/pagamento_cartao_credito"
                    app:cardBackgroundColor="@color/design_default_color_primary"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:background="@drawable/icon_card"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                    <TextView
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:text="CartÃ£o de Credito"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
